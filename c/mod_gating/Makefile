##
##  Makefile -- Build procedure for sample mod_gating Apache module
##  Autogenerated via ``apxs -n mod_gating -g''.
##

#   the used tools
APXS=/usr/local/apache/bin/apxs
APACHECTL=/usr/local/apache/bin/apachectl

SRC=mod_gating.c 

#   additional user defines, includes and libraries
#DEF=-Dmy_define=my_value
#INC=-Imy/include/dir
#LIB=-Lmy/lib/dir -lmylib

#   the default target
all: mod_gating.so

#   compile the DSO file
mod_gating.so: Makefile
	$(APXS) -c $(DEF) $(INC) $(LIB) $(SRC)

#   install the DSO file into the Apache installation
#   and activate it in the Apache configuration
install: all
	$(APXS) -i -a mod_gating.so

#   cleanup
clean:
	-rm -f mod_gating.o mod_gating.so

#   simple test
test: reload
	lynx -mime_header http://localhost/mod_gating

#   reload the module by installing and restarting Apache
reload: install restart

#   the general Apache start/restart/stop procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

